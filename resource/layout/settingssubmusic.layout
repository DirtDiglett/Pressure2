"resource/layout/settingssubmusic.layout" {
	styles {	
		CSettingsSubMusic {
			render_bg {
				0="image(x0+26,y0+27,x1,y1, graphics/icons/settings/music)"
				1="image(x0+26,y0+212,x1,y1, graphics/icons/settings/libraries)"
				2="image(x0+26,y0+391,x1,y1, graphics/icons/settings/notifications)"
			}
		}

		LibraryListStyle {
			inset-top=-2

			render {
				0="fill(x0,y0,x0+1,y1-1, color__divider)"
				1="fill(x0,y0,x1,y0+1, color__divider)"
				2="fill(x1-1,y0,x1,y1-1, color__divider)"
				3="fill(x0, y1-1, x1, y1, color__divider)"
			}
		}

		Headertext {
			textcolor=color__secondaryText
		}
	}
	
	layout {
		place {
			control=LoggingHeader,VolumeHeader,VolumeSlider,VolumeDivider
			height=0
		}
		
		region {
			name=library
			x=82
			y=0
			width=max
			height=172
			margin-right=29
		}

		place {
			control=LibraryHeader
			region=library
			dir=down
			y=28
			spacing=2
		}

		place {
			control=LibraryList
			start=LibraryHeader
			dir=down
			y=4
			width=437
			height=60
		}

		place {
			control=AddLibraryButton
			start=LibraryList
			dir=down
			y=4
			width=135
			height=34
		}

		place {
			control=RemoveLibraryButton,StartCrawlingButton
			start=AddLibraryButton
			dir=right
			x=4
			width=135
			height=34
			spacing=4
		}

		place {
			control=LoggingCrawlingCheckbox
			start=AddLibraryButton
			dir=down
			y=8
			height=18
		}

		place {
			control=LibraryDivider
			align=left
			x=71
			y=193
			width=max
			height=1
		}

		region {
			name=database
			height=172
			width=max
			x=82
			y=185
			margin-right=29
		}

		place {
			control=DatabaseHeader,DatabaseInfoLabel
			region=database
			dir=down
			y=28
			spacing=2
		}

		place {
			control=DatabaseCrawlAtStartup,DatabaseCrawlSteamInstallFolders
			start=DatabaseInfoLabel
			dir=down
			y=18
			height=18
			spacing=18
		}

		place {
			control=ResetDatabaseButton
			start=DatabaseCrawlSteamInstallFolders
			dir=down
			y=4
			width=350
			height=34
		}

		place {
			control=DatabaseDivider
			x=71
			y=372
			width=max
			height=1
			align=left
		}

		region {
			name=notifications			
			x=82
			y=373
			width=max
			height=172
			margin-right=29
		}

		place {
			control=PauseMusicHeader
			region=notifications
			dir=down
			y=18
			height=18
			spacing=18
		}

		place {
			control=PauseMusicWhenStartingApplicationCheckbox,PauseMusicWhenVoiceChatCheckbox
			start=PauseMusicHeader
			dir=down
			y=4
			height=18
			spacing=18
		}

		place {
			control=NotificationHeader
			region=notifications
			dir=down
			x=226
			y=18
			height=18
			spacing=18
		}

		place {
			control=NotificationPlaylistNowPlayingCheckbox
			start=NotificationHeader
			dir=down
			y=4
			height=18
			spacing=18
		}

		place {
			control=EnableMediaKeysCheckbox
			y=290
			x=250
		}
	}
}
		rightcolumnlink {
			textcolor=blue500
			font-family=font__basefont
			font-size = 17
			font-size = 15 [$LINUX]
			font-size = 18 [$OSX]	
			font-style=normal
			inset="0 0 0 0"
		}
		
			rightcolumnlink:hover {
				textcolor=blue300
			}
			
			rightcolumnlink:disabled {
				textcolor=color__disabled
			}
		
		DetailsBorderPanel {
			bgcolor=none
			
			render {}
		}
	}
	
	layout {
		place {
			control=linkslabel,sendguestpasslink,achievementslink,dlclink,guidelink,*taglink
			height=0
		}
		
		region {
			name=details
			x=308
			y=0
			width=max
			height=max
			margin-left=0
			margin-top=0
			margin-right=-1
			margin-bottom=1
			overflow=scroll-vertical
		}
		
		region {
			name=headertext
			region=details
			x=0
			y=0
			width=max
			height=280
			margin-right=0
		}
		
		region {
			name=rightcolumn
			region=details
			start=headertext
			dir=down
			width=max
			height=150
		}
		
		region {
			name=detailsbody
			region=details
			y=280
			width=max
			height=max
			overflow=allow-vertical
		}
		
		place {
			control=emptylisttext
			width=308
			height=max
			margin=8
		}
		
		place {
			control=GamesList
			width=308
			height=max
			margin-top=-2
		}
		
		place {
			control=DetailsBorder
			width=max
			height=max
		}
		
		// Using a y=-400 this "sort-of" vertically aligns most imagery.
		place  {
			control=headerimagea
			region=details
			x=0
			y=-400
			width=1280
			height=280
		}
		
		place {
			control=headerimageb
			region=details
			x=0
			y=-400
			width=1280
			height=280
		}
		
		place {
			control=gametitleheader
			region=headertext
			dir=down
			x=33
			height=96
		}
		
		place {
			control=gamesubheader
			region=headertext
			start=gametitleheader
			dir=down
			height=180
		}
		
		region {
			name=links
			region=detailsbody
			y=0
			width=max
			height=162
		}
		
		place {
			control=tagslabel
			region=links
			width=max
			height=max
			margin-left=12
			margin-top=16
			margin-right=12
			margin-bottom=16
		}
		
		region {
			name=linksleft
			region=links
			align=left
			width=200
			height=130
		}
		
		place {
			control=gamehublink,forumlink,ogglink,newslink
			region=linksleft
			align=left
			dir=down
			x=30
			y=30
			spacing=8
		}
		
		region {
			name=linkscenter
			region=links
			align=top-center
			width=200
			height=130
		}
		
		place {
			control=cdkeylink,manuallink,storelink,guideslink
			region=linkscenter
			align=left
			dir=down
			y=30
			spacing=8
		}
		
		region {
			name=linksright
			region=links
			align=right
			width=200
			height=130
		}
		
		place {
			control=recommendlink,supportlink,edittagslink
			region=linksright
			align=left
			dir=down
			y=30
			spacing=8
		}
		
		place {
			control=welcomedetails,friendsdetails,turnnotifications,achievementsdetails,clouddetails,communityfilesdetails,dlcdetails,newsdetails,nonsteamdetails,screenshotsdetails
			region=detailsbody
			start=tagslabel
			dir=down
			y=16
			width=max
			spacing=20
		}
	}
}
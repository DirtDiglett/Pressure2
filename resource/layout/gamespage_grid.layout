"resource/layout/gamespage_grid.layout" {
	colors {
		GridView.OriginalImageWidth = "460"
		GridView.OriginalImageHeight = "215"
		GridView.DropShadowLeading = "0"
	}

	styles {
		WrapPanel {
			bgcolor="custombackgroundprimary"
			inset="0 0 0 0"

			render {
				1="image_tiled(x0,y0,x1,y0+4, graphics/material/shadows/top)"
			}
			render_bg {}
		}	

		emptylisttext {
			textcolor=disabled_OnLightBG
			font-size=15
			font-size=16 [$OSX]

			render_bg {}
		}
		
		GameItem_installed {
			alpha=255
		}

		GameItem_unInstalled {
			alpha=255
		}

		GameItem_Updating {
			alpha=255
		}
	}

	layout {
		place {
			control=grid
			width=max
			height=max 
		}

		place {
			control=emptylisttext
			align=top-center
			width=max
			height=max
			margin-top=50
		}
	}
}
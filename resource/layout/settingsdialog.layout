"resource/layout/settingsdialog.layout" {
	styles {
		CDialogSettings {
			minimum-width=800
			minimum-height=609

			render {
				0="fill(x0,y1-58,x1,y1-57, color__divider)"
			}
			render_bg {}
		}

		PropertySheet {
			bgcolor=none
			minimum-width=535
			minimum-height=517

			render_bg {}
		}

		SettingsList {
			bgcolor=white
			font-family=font__mediumfont
			font-size=18
			font-size=19 [$OSX]
			minimum-width=195
			minimum-height=517
			inset="0 -3 0 0"
			padding-left=18

			render {
				0="fill(x1,y0,x1+1,y1, color__divider)"
			}
			render_bg {}
		}

		// There is a header forced to exist on the Settings List. This hides it better.
		ListPanelSectionHeader {
			inset="0 0 0 0"

			render_bg {
				0="fill(x0,y0,x1,y1, white)"
			}
		}
	}

	layout {
		region {
			name=buttons
			align=bottom
			width=max
			height=58
		}

		region {
			name=body
			y=34
			width=max
			height=max
			margin-bottom=58
		}

		place {
			control=settingslist
			width=196
			height=max
			region=body
		}

		place {
			control=sheet
			region=body
			width=max
			height=max
			margin-left=196
		}

		place {
			control=okbutton,cancelbutton
			region=buttons
			align=right
			width=92
			height=34
			margin-top=12
			margin-right=11
			spacing=12
		}
	}
}

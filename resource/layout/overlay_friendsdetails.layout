"resource/layout/overlay_friendsdetails.layout" {
	styles {
		DarkRegion {}
		FriendsGrid {}
		PreviewImage {}

		Button {
			textcolor=lightblue300
			font-family=mediumfont
			font-weight=800
			font-size=20
			font-size=21 [$OSX]
			font-weight=400
			font-style=normal
			padding-top=0
			padding-left=57
			inset-top=-18
			inset-left=-6

			render_bg {}			
		}

			button:hover {
				textcolor=lightblue200
			}

			button:selected {
				bgcolor=none
			}

			button:active {
				bgcolor=none
			}

		detailsbox {
			render_bg {
				0="image(x0,y0+2,x1,y1, graphics/overlay/buttons/friends)"
			}
		}

		highlight {
			textcolor=color__text__alternate
			font-size=17
			font-size=18 [$OSX]
		}
	}
	
	layout {
		place {
			control=TitleText,grid
			height=0
		}

		region {
			name=actions
			width=max
			height=max
		}

		place {
			control=TextThisManyFriends
			region=actions
			x=57
			y=23
		}

		place {
			control=AllFriendsButton,ViewPlayersButton
			region=actions
			dir=down
			width=max
			height=44
			spacing=28
		}
	}
}
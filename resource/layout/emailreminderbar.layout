"resource/layout/emailreminderbar.layout" {
	styles {
		bright {}
		CloseStyle {}

		CEmailReminderBar {
			bgcolor=amber500

			render {
				0="fill(x0,y1-1,x1,y1, dividers_onLightBG)"
			}
			render_bg {}
		}

		Label {
			textcolor=text_onLightBG
			font-family=mediumfont
			font-size=24
			font-size=25 [$OSX]
			font-style=normal
		}
		
		soft {			
			textcolor=secondaryText_onLightBG
			font-family=mediumfont
			font-size=20
			font-size=21 [$OSX]
			font-style=normal
		}

		URLLabel {		 
			bgcolor=none
			textcolor=blue500
			font-family=mediumfont
			font-size=16
			font-size=17 [$OSX]
			font-weight=400
			font-style=uppercase
			inset-left=4
			inset-top=3
			
			render_bg {}
		}

			URLLabel:Hover {
				textcolor=blue300
				
				render_bg {
					0="fill(x0,y0,x1,y1, dividers_onLightBG)"
				}
			}

			URLLabel:disabled {
				bgcolor=none
				textcolor=disabled_onLightBG
				
				render_bg {}
			}


			URLLabel:focus {
				bgcolor=none
				textcolor=blue500

				render_bg {}
			}

			URLLabel:active {
				bgcolor=blue500transparent
				textcolor=blue500

				render_bg {}
			}
	}
	
	layout {
		place {
			control=emailreminderbar_close,emailreminderbar_infolink
			height=0
		}
			
		region {
			name=main
			x=24
			y=24
			width=max
			height=max
			margin-right=24
			margin-bottom=58
		}

		place {
			control=emailreminderbaremail_email
			region=main
			width=max
		}

		place {
			control=emailreminderbarlabel,emailreminderbar_info
			start=emailreminderbaremail_email
			dir=down
			y=20
			spacing=3
		}

		region {
			name=buttons
			align=bottom
			width=max
			height=58
		}

		place {
			control=emailreminderbar_yesbutton,emailreminderbar_nobutton
			region=buttons
			align=right
			width=108
			height=34
			margin-top=12
			margin-right=11
			spacing=12
		}
	}
}
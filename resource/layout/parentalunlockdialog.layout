"resource/layout/parentalunlockdialog.layout" {
	styles {
		Hey2 {}

		ParentalUnlockDialog {
			minimum-width=380
			minimum-height=286

			render {
				0="fill(x0,y1-58,x1,y1-57, dividers_onLightBG)"
			}
		}

		Password {
			font-size=40
			font-size=41 [$OSX]
			minimum-height=50
		}

		Hey {
			textcolor=text_onLightBG
			font-family=mediumfont
			font-size=15
			font-size=16 [$OSX]
		}

		Key {
			image="graphics/icons/familyviewdialog/familyview"
		}
	}
	
	layout {
		place {
			control=Instructions2
			height=0
		}

		place {
			control=KeyImage
			x=24
			y=58
		}

		place {
			control=Instructions
			start=KeyImage
			dir=right
			x=24
			width=max
			height=max
			margin-right=24
		}

		place { 
			control=Password
			start=KeyImage
			dir=down
			y=24
			width=max
			margin-right=24
		}

		region {
			name=buttons
			align=bottom
			width=max
			height=58
		}

		place {
			control=OK,Cancel
			region=buttons
			align=right
			width=92
			height=34
			margin-top=12
			margin-right=11
			spacing=12
		}

		place {
			control=Recovery
			region=buttons
			align=left
			height=18
			margin-left=11
			margin-top=20
			spacing=12
			end-right=OK
		}
	}
}
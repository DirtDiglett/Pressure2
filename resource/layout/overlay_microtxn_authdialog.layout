"resource/layout/overlay_microtxn_authdialog.layout" {
	styles {
		ListPanel {}
		ItemListStyle {}
		TotalAmtStyle {}
		AuthBtnStyle {}

		Frame {
			render {
				0="fill(x0,y1-58,x1,y1-57, color__divider)"
			}
		}

		BalanceStyle {
			textcolor=color__text
			padding-left=8
			padding-right=8

			render_bg {
				0="fill(x0+2,y0+2,x1-2,y1-2, limeA400)"
				1="image(x0-3,y1-2,x0+2,y1+4, graphics/material/buttons/lime/bottomleft)"
				2="image_tiled(x0+2,y1-2,x1-2,y1+4, graphics/material/buttons/lime/bottommiddle)"
				3="image(x1-2,y1-2,x1+3,y1+2, graphics/material/buttons/lime/bottomright)"
				4="image_tiled(x0-3,y0+2,x0+2,y1-2, graphics/material/buttons/lime/leftmiddle)"
				5="image_tiled(x1-2,y0+2,x1+3,y1-2, graphics/material/buttons/lime/rightmiddle)"
				6="image(x0-3,y0-2,x0+2,y0+2, graphics/material/buttons/lime/topleft)"
				7="image_tiled(x0+2,y0-2,x1-2,y0+2, graphics/material/buttons/lime/topmiddle)"
				8="image(x1-2,y0-2,x1+3,y0+2, graphics/material/buttons/lime/topright)"
			}
		}

		RefundTextStyle {
			selectedbgcolor=blue500
			textcolor=color__secondaryText
			selectedtextcolor=white
			font-size=15
			font-size=16 [$OSX]

			render_bg {}
		}
		
		RefundTextLinkStyle {
			textcolor=blue500
			font-family=basefont
			font-size=16
			font-size=17 [$OSX]
			font-weight=400
			font-style=underline
		}

			RefundTextLinkStyle:hover {
				textcolor=blue300
			}
		
		SeparatorStyle {
			render_bg {
				0="fill( x0, y0, x1, y1, color__divider )"
			}
		}	
	}
	
	layout {
		place {
			control=BalanceDescLabel,ReasonLabel,Separator
			height=0
		}

		place {
			control=BalanceLabel
			align=right
			y=3
			height=28
			margin-right=18
			end-right=frame_close
		}

		place {
			control=ItemList
			dir=down
			x=24
			y=58
			width=max
			height=max
			margin-right=24
			margin-bottom=160
		}

		place {
			control=TotalLabel,TotalAmtLabel
			start=itemlist
			align=right
			dir=down
			y=8
			margin-right=8
			end-right=totalamtlabel
		}

		place {
			control=TotalAmtLabel
			start=itemlist
			align=right
			dir=down
			y=8
			width=90
			margin-right=24
		}

		place {
			control=ConvertedTotalLabel
			width=max
		}

		place {
			control=ConvertedTotalAmtLabel
			width=90
		}

		place {
			control=ConvertedTotalLabel,ConvertedTotalAmtLabel
			start=TotalLabel
			align=right
			dir=down
			y=4
			margin-right=24
		}

		region {
			name=refundzone
			align=bottom
			width=max
			height=116
			margin-bottom=58
		}

		place {
			control=RefundText
			region=refundzone
			width=max
			x=24
			y=0
			margin-right=24
		}
		
		region {
			name=buttons
			align=bottom
			width=max
			height=58
		}

		place {
			control=AuthorizeButton,CancelButton
			region=buttons
			align=right
			height=34
			margin-top=12
			margin-right=11
			spacing=12
		}
	}
}
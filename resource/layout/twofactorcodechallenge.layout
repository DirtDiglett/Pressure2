"resource/layout/twofactorcodechallenge.layout" {
	styles {
		TwoFactorCodeChallenge {
			minimum-width=380
			minimum-height=420

			render {
				0="fill(x0,y1-58,x1,y1-57, dividers_onLightBG)"
			}
			
			render_bg {
				0="image(x0,y0,x1,y1, graphics/steamguardheader)"
			}
		}

		Key {
			image="graphics/icon_mobile_security_key"
		}
		
		AuthCode {
			minimum-height=50
			font-size=40
			font-size=41 [$OSX]
		}

		Instructions {
			textcolor=text_onLightBG
			font-family=mediumfont
			font-size=15
			font-size=16 [$OSX]		
		}
		
		Background {
			render_bg {}
		}

	}
	
	layout {
		place {
			control=Label1,Background,OK
			height=0
		}

		place {
			control=frame_title
			visible=0
			height=0
		}

		place {
			control=frame_captiongrip
			width=max
			height=113
			margin=0
		}

		place {
			control=Label2
			x=24
			y=137
			width=max
			height=max
			margin-right=24
		}

		place {
			control=Key
			x=172
			y=201
		}
		
		place { 
			control=AuthCode
			x=118
			y=275
			width=144
		}

		region {
			name=buttons
			align=bottom
			width=max
			height=58
		}

		place {
			control=Cancel
			region=buttons
			align=right
			width=92
			height=34
			margin-top=12
			margin-right=11
			spacing=12
		}
	}
}
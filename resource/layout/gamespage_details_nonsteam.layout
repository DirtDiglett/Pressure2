"resource/layout/gamespage_details_nonsteam.layout" {
	colors {
		RichText.InsetX = "0"
		RichText.InsetY = "3"
		GameDetailsNonSteam.ExtraVerticalSpacing = "64"
	}

	styles {
		nonsteamdetails { 
			render_bg {
				0="fill(x0-20,y0-15,x1,y0-14, color__divider)"
			}
		}

		bodycontent {
			textcolor=color__text
			font-size=16
			

			render_bg {}
		}

		"RichText url" {
			font-size=16
			
		}
	}

	layout {
		region {
			name=body
			width=max
			height=max
			margin=8
		}

		place {
			control=headerlabel,bodycontent
			region=body
			dir=down
			width=max
			spacing=8
		}
	}
}
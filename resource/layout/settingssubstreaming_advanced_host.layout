"resource/layout/settingssubstreaming_advanced_host.layout" {
	styles {
		CSettingsSubStreamingAdvancedHost {	
			minimum-width=476
			minimum-height=200

			render {
				0="fill(x0,y1-58,x1,y1-57, color__divider)"
			}
			render_bg {
				0="fill(x0+71,y0+136,x1,y0+137, color__divider)"
				1="image(x0+26,y0+61,x1,y1, graphics/icons/settings/hardware)"
				2="image(x0+26,y0+155,x1,y1, graphics/icons/settings/router)"
			}
		}
	}
	
	layout {
		place {
			control=SupportInformationLabel
			height=0
		}

		region {
			name=buttons
			align=bottom
			width=max
			height=58
		}

		region {
			name=hardware
			x=82
			y=34
			width=max
			height=114
			margin-right=29
		}

		place {
			control=DescriptionLabel
			region=hardware
			dir=down
			y=28
			width=max
			spacing=2
		}

		place {
			control=EnableHardwareEncoding
			start=DescriptionLabel
			dir=down
			y=4
			width=max
			height=18
		}

		region {
			name=traffic
			x=82
			y=124
			width=max
			height=114
			margin-right=29
		}

		place {
			control=EnableTrafficPriorityLabel
			region=traffic
			dir=down
			y=28
			width=max
			spacing=2
		}

		place {
			control=EnableTrafficPriority
			start=EnableTrafficPriorityLabel
			dir=down
			y=4
			width=max
			height=18
		}
		
		place {
			control=OKButton
			region=buttons
			align=right
			width=92
			height=34
			margin-top=12
			margin-right=11
			spacing=12
		}
	}
}
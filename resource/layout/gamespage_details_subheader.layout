			font-weight=600
			font-style=uppercase
			padding-left=60
			padding-top=10
			padding-right=60
			padding-bottom=10
			inset="0 -2 0 0"
			
			render {}
			render_bg {
				0="fill(x0,y0,x1,y1, grey100--21opacity)"
				1="fill(x0,y0,x0+3,y1, grey100)"
				2="fill(x0,y0,x1,y0+3, grey100)"
				3="fill(x1-3,y0,x1,y1, grey100)"
				4="fill(x0,y1-3,x1,y1, grey100)"

	layout {
		region {
			name=header
			x=0
			y=0
			width=max
			height=max
		}
		
		place {
			control=launchbutton
			region=header
			dir=right
			align=middle
			spacing=0
		}
		
		place {
			control=clientlist
			start=launchbutton
			region=header
			dir=right
			x=8
			width=24
		}
		

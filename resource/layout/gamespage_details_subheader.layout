		ClientListButton {
			inset="-40 0 0 0"

			render {
				0="image(x0+10, y0+22, x1, y1, graphics/icons/menu/standard/menu)"
			}
			render_bg {}			
		}
		
			ClientListButton:hover {
				render {
					0="image(x0+10, y0+22, x1, y1, graphics/icons/menu/hover/menu)"
				}
			}
			
			ClientListButton:active {
				render_bg{
					-3="image(x0-7,y0+11,x0+12,y0+30, graphics/material/selectionbubbles/hover/white/topleft)"

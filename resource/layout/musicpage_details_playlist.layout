"resource/layout/musicpage_details_playlist.layout" {
	styles {
		TrackStyle {}
		AdditionalActionButtonStyle {}

		CMusicPage_Details_Playlist {
			bgcolor=none

			render {}
			render_bg {}
		}
		
		PlaylistTitleStyle {
			textcolor=color__text
			font-size = 30
font-size = 25 [$LINUX]
font-size = 31 [$OSX]
			
			font-style=normal
		}

		TracksInfoLabelStyle {
			textcolor=color__secondaryText
			font-size = 17
font-size = 15 [$LINUX]
font-size = 18 [$OSX]
			
		}
		
		CoverStyle {
			render_bg {
				-1="fill(x0,y1-1,x1+9999,y1, color__divider)"
				0="image(x0,y0,x1,y1, graphics/music_placeholder)"
			}
		}
		
		ActionButtonStyle { 
			bgcolor=none
			textcolor=none
			font-size=0
			minimum-width=48
			minimum-height=48
			
			render {}
			render_bg {				
				0="image(x0, y0, x1, y1, graphics/icons/playalbum/standard/playalbum)"
			}	
		}

			ActionButtonStyle:hover { 
				render_bg {				
					0="image(x0, y0, x1, y1, graphics/icons/playalbum/hover/playalbum)"
				}	
			}

			ActionButtonStyle:active { 
				render_bg {				
					0="image(x0, y0, x1, y1, graphics/icons/playalbum/active/playalbum)"
				}	
			}
	}

	layout {
		region {
			name=bodyregion
			width=max
			height=max
			overflow=scroll-vertical
		}

		place {
			control=PlaylistTitleLabel
			region=bodyregion
			x=24
			y=18
			width=max
			margin-right=24
		}
		
		place {
			control=ArtistLabel,TracksInfoLabel
			region=bodyregion
			start=PlaylistTitleLabel
			dir=down
		}

		place {
			control=PlayPlaylistButton
			region=bodyregion
			start=TracksInfoLabel
			dir=down
			width=48
			height=48
		}

		place {
			control=AddPlaylistToQueueButton,AddRandomTracksToPlaylistButton
			region=bodyregion
			start=PlayPlaylistButton
			dir=down
			y=18
			height=34
			spacing=4
		}

		place {
			control=*MusicPageDetailsPlaylistTrack
			region=bodyregion
			start=AddRandomTracksToPlaylistButton
			dir=down
			x=-24
			y=24
			width=max
			height=40
			spacing=10
		}
	}
}
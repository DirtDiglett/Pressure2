"resource/layout/screenshotmanager.layout" {
	styles {
		DarkRegionDetails {}
		publishcaptionprompt {}
		NoSelectionInstructions {}

		CScreenshotManager {
			minimum-height=577
			minimum-width=778

			render {
				0="image_tiled(x0,y0+34,x1,y0+38, graphics/material/shadows/top)"
				1="fill(x0,y1-58,x1,y1-57, dividers_onLightBG)"
			}
			render_bg {
				0="fill(x0,y0,x1,y0+79, customgreysecondary)"
			}
		} 

		WrapPanel {			
			bgcolor=white
			padding-left=4
			padding-top=4
			padding-right=4
			padding-bottom=4

			render_bg {
				0="fill(x1-1,y0,x1,y1, dividers_onLightBG)"
			}
		}

		publishcharsleft_toomanychars {
			textcolor=red500
		}

		ThumbnailUnpublished {
			bgcolor=disabled_onLightBG
		}

		ThumbnailPublished {
			bgcolor=disabled_onLightBG
		}

		ThumbnailSelected {
			bgcolor=disabled_onLightBG

			render {
				0="fill(x0, y0, x0+2, y1, blue500 )"
				1="fill(x0, y0, x1, y0+2, blue500 )"
				2="fill(x1-2, y0, x1, y1, blue500 )"
				3="fill(x0, y1-2, x1, y1, blue500 )"
				4="fill(x0,y0,x1,y1, blue500transparent)"
			}
		}

		ThumbnailUploaded {
			bgcolor=disabled_onLightBG
		}

		SSDetails {
			minimum-width=340
			minimum-height=260

			render {
				0="fill(x0,y1-1,x1,y1, dividers_OnLightBG)"
			}
		}

		publishcaption {
			textcolor=secondaryText_onLightBG
			font-style=italic
		}

		publishcharsleft {
			textcolor=disabled_onLightBG
		}

		gameselector {
			minimum-width=260
		}
		
		ScreenshotLoadingThrobber {
			bgcolor=disabled_onLightBG
			minimum-width=100
			minimum-height=75
		}

		LargeSelectionCount {
			font-family=mediumfont
			font-size=60
			font-size=61 [$OSX]
		}

		NoSelectionTitle {
			textcolor=customgreyprimary
			font-family=mediumfont
			font-size=30
			font-size=31 [$OSX]
			font-style=normal
		}

		ComboBox {
			render {
				0="image( x1 - 24, y0 + 20, x1, y1, graphics/icons/dropdown/standard/down)"
			}
		}
	}
	
	
	layout {
		place {
			control=selectorlabel,null_placer
			height=0
		}
		
		region {
			name=details
			align=right
			y=79
			width=340
			height=max
			margin-bottom=58
		}
		
		place {
			control=DarkRegionDetails
			region=details
			width=max
			height=max
			z=-1
		}

		place {
			control=SSDetails
			region=details
			width=max
			height=260
			align=top-center
		}

		place {
			control=SSDate
			start=SSDetails
			align=left
			dir=down
			x=8
			y=8
		}

		place {
			control=SSSize,SSSizeOriginal
			align=right
			start=SSDate
			dir=left
			margin-right=8
		}

		place {
			control=publish_caption,details_caption
			region=details
			align=bottom
			x=8
			margin-right=8
			margin-bottom=30
			width=500
			height=90
		}

		place {
			control=spoiler_checkbox
			start=publish_caption
			dir=down
			height=18
			y=4
		}

		place {
			control=publish_charsleft
			region=details
			start=spoiler_checkbox
			align=right
			dir=right
			height=18
			margin-right=8
		}

		place {
			control=file_not_loaded_label
			region=details
			align=top-center
			y=100
		}

		place {
			control=multi_img
			region=details
			align=top-center
			y=40
		}

		place {
			control=multi_img_count
			region=details
			align=top-center
			y=80
		}

		place {
			control=multi_img_selected
			region=details
			align=top-center
			start=multi_img
			dir=down
			y=18
		}

		place {
			control=multi_img_upload_size,multi_img_upload_size_info
			region=details
			align=top-center
			y=224
			spacing=4
		}

		place {
			control=multi_img_storage_remaining,multi_img_storage_remaining_info
			region=details
			align=top-center
			y=248
			spacing=4
		}

		place {
			control=instr_no_selection_title,instr_no_selection
			region=details
			dir=down
			x=24
			y=24
			width=max
			margin-right=24
			spacing=18
		}

		region {
			name=subnav
			width=max
			height=45
			y=34
		}

		place {
			control=game_selector
			region=subnav
			dir=right
			height=max
		}

		region {
			name=list
			margin-right=340
			margin-bottom=58
			width=max
			y=79
		}

		place {
			control=grid
			region=list
			x=4
			width=max
			height=max
			margin-bottom=-1
		}

		place {
			control=no_screenshots
			region=list
			align=top-center
			y=50
		}

		region {
			name=buttons
			align=bottom
			width=max
			height=58
		}

		place {
			control=multiselect_button,view_local_library_button,view_screenshots
			region=buttons
			align=left
			height=34
			margin-left=11
			margin-top=12
			spacing=12
		}

		place {
			control=delete_button,details_button,publish_button,multi_img_delete,multi_img_upload
			region=buttons
			align=right
			height=34
			margin-top=12
			margin-right=11
			spacing=12
		}
	}
}
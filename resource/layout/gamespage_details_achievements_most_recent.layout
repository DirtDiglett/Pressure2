"resource/layout/gamespage_details_achievements_most_recent.layout" {
	colors {
		// ProgressBarMargins must be the combined left+right margin of the actual bar from it's container
		GameDetailsAchievements.ProgressBarMargins = "8"
		
		Tooltip.Anchor = "Parent"
	}

	styles {
		mostrecent {
			minimum-height=118
		}

		achievementimagebg {
			bgcolor=none
			inset="0 0 0 0"
	  		image="graphics/achievementbg_recent"	
		}

		mostrecent_label {
			textcolor=color__text
			font-family=font__mediumfont
			font-size=20
			
			font-weight=400
		}
		
		mostrecent_name {
			textcolor=color__secondaryText
			font-size=18
			
		}

		mostrecent_unlockedsofar {
			textcolor=color__secondaryText
			font-family=font__basefont
			font-size=18
			
			font-weight=400
		}

		progressbackground {
			bgcolor=none
			
			render_bg {
				 0="fill(x0,y0,x1,y1, lime500transparent)"
			}
		}

		progressbarimage {
			bgcolor=lime500
			render_bg {}
		}
	}

	layout {
		place {
			region=body
			control=mostrecent_background
			width=0
			height=0
		}

		region {
			name=body
			width=max
			height=max
			margin=0
		}

		place {
			control=mostrecent_label
			region=body
			x=76
			y=55
			width=max
		}
		
		place {
			control=mostrecent_name
			region=body
			x=76
			y=75
			width=max
		}

		place {
			control=mostrecent_image
			region=body
			x=0
			y=42
			width=64
			height=64
		}

		place {
			control=mostrecent_unlockedsofar
			region=body
			x=0
			y=8
			width=max
		}
		
		place {
			control=progressbackground
			region=body
			y=28
			width=max
			height=10
			margin-right=25
		}

		place {
			control=progressbarimage
			region=body
			y=28
			height=10
			margin-right=25
		}
	}
}
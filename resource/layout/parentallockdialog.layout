"resource/layout/parentallockdialog.layout" {
	styles {
		ParentalLockDialog {
			minimum-width=380
			minimum-height=200

			render {
				0="fill(x0,y1-58,x1,y1-57, dividers_onLightBG)"
			}
		}

		Hey {
			textcolor=text_onLightBG
			font-family=mediumfont
			font-size=15
			font-size=16 [$OSX]
		}

		Key {
			image="graphics/icons/familyviewdialog/familyview"
		}
	}
	
	layout {
		place {
			control=KeyImage
			x=24
			y=58
		}

		place {
			control=Instructions
			start=KeyImage
			dir=right
			x=24
			width=max
			height=max
			margin-right=24
		}
		
		region {
			name=buttons
			align=bottom
			width=max
			height=58
		}

		place {
			control=OK,Cancel
			region=buttons
			align=right
			width=92
			height=34
			margin-top=12
			margin-right=11
			spacing=12
		}
	}
}
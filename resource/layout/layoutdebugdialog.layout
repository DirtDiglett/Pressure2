"resource/layout/layoutdebugdialog.layout" {
	styles {
		LayoutDebugDialog {
			minimum-width=500
			minimum-height=300

			render {
				0="image_tiled(x0,y0+34,x1,y0+38, graphics/material/shadows/top)"
			}
			render_bg {
				0="fill(x0,y0,x1,y0+79, customgreysecondary)"
			}
		}

		PageTab {
			minimum-height=34
			inset-top=-1
		}

		RichText {
			textcolor=disabled_onLightBG
		}
	}

	layout {
		place {
			control=wiki_link
			height=0
		}

		place {
			control=tabs
			y=41
			width=max
			height=max
			margin-bottom=41
		}
		
		region {
			name=buttons
			align=bottom
			width=max
			height=58
		}

		place {
			control=containerlabel,selectionlabel
			region=buttons
			align=left
			dir=down
			height=18
			margin-left=11
			margin-top=6
			spacing=4
			end-right=fileurl
		}

		place {
			control=fileurl
			region=buttons
			align=right
			height=18
			margin-top=12
			margin-right=11
			spacing=4
		}
	}
}
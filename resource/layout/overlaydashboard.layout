"resource/layout/overlaydashboard.layout" {	
	styles {
		hotkey {}
		bottomfade {}
		detailsboxtitle {}
		LabelOverlay {}

		topfade {
			render_bg {
				0="image(x0,y0,x1,y1, graphics/overlay/toprightshadow)"
			}
		}

		overlaymain {
			bgcolor=color__disabled

			render_bg {
				0="gradient_horizontal(x0,y0,x0+1080,y1, color__secondaryText)"
			}
		}	
				
		topbar {
			textcolor=color__text__alternate
			font-family=mediumfont
			font-weight=800
			font-size=30
			font-size=31 [$OSX]
			font-weight=600
		}
				
		OverlayURLLabel {
			image=graphics/overlay/close
		}
		
			OverlayURLLabel:hover {
				image=graphics/overlay/close_hover
			}

			OverlayURLLabel:selected {
				image=graphics/overlay/close_active
			}
	}
	
	layout {	
		place {
			control=HotkeyLabel,HotkeyExplain,BottomFadePanel
			height=0
		}

		region {
			name=overlay
			align=left
			width=max
			margin-left=15
			margin-top=8
			margin-right=15
			margin-bottom=15
		}
		
		place {
			control=TopFadePanel
			align=right
			width=31
			height=31
		}
		
		place {
			control=CloseButton
			region=overlay
			align=right
			y=7
			width=40
			height=40
		}

		place {
			controls=gamename
			region=overlay
			align=left
			x=0
		}
		
		place {
			control=PowerMeterDim
			align=right
		}
		
		place {
			control=TaskbarPanel
			align=top-center
			y=55
			width=400
		}
	}
}
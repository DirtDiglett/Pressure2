"resource/layout/joingamedialogexpanded.layout" {
	styles {
		CJoinGameDialog {
			minimum-width=450

			render {
				0="fill(x0,y1-58,x1,y1-57, dividers_onLightBG)"
			}
			render_bg {
				0="image(x0+24,y0+58,x1,y1, resource/icon_info)"
			}
		}

		highlight {
			textcolor=red500
		}	
	}
	
	layout {		
		place {
			control=ThrobberThrobberThrobber
			height=0
		}

		region {
			name=page
			x=24
			y=58
			margin-right=24
			margin-bottom=58
		}

		place {
			controls=InfoLabel
			region=page
			x=50
			width=max
		}

		place {
			control=ReadyToPlayInfoLabel
			region=page
			x=50
		}

		place {
			control=ReadyToPlayTimeLabel
			region=page
			start=ReadyToPlayInfoLabel
			dir=down
			y=4
		}

		place {
			control=Progress
			region=page
			dir=down
			y=50
			width=max
			height=34
		}

		place {
			control=OverrideThrottleCheckBox
			start=Progress
			dir=down
			y=4
			width=max
			height=18
		}

		place {
			control=SkipUpdateLabel
			start=OverrideThrottleCheckBox
			dir=down
			y=4
			width=max
			height=18
		}
		
		place {
			control=Divider
			y=214
			width=max
			height=1
		}

		place {
			control=ssaupdatelabel,SSAUpdateURL
			y=215
			region=page
			dir=down
			spacing=4
		}

		region {
			name=buttons
			align=bottom
			width=max
			height=58
		}

		place {
			control=AutoLaunchCheckBox
			region=buttons
			align=left
			height=18
			margin-left=11
			margin-top=20
			spacing=12
		}

		place {
			control=NewsButton
			width=160
		}

		place {
			control=PlayButton
			width=126
		}

		place {
			control=NewsButton,PlayButton
			region=buttons
			align=right
			height=34
			margin-top=12
			margin-right=11
			spacing=12
		}
	}
}